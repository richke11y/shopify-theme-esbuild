{% if template %}

	{% capture script_bundle %}
	bundle.{{ template.name }}{% if template.suffix %}.{{ template.suffix }}{% endif %}.js
	{% endcapture %}

	{{ script_bundle | asset_url | preload_tag: as: 'script' }}

{% elsif request.path == '/challenge' %}

	{{ 'bundle.challenge.js' | asset_url | preload_tag: as: 'script' }}

{% else %}

	{% unless checkout %}

		{{ 'bundle.apps.js' | asset_url | preload_tag: as: 'script' }}

	{% endunless %}

{% endif %}