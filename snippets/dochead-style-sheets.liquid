{% if template %}

	{% if request.path == '/challenge' %}

		{% capture style_bundle %}bundle.challenge.css{% endcapture %}

	{% else %}

		{% capture style_bundle %}bundle.{{ template.name }}{% if template.suffix %}.{{ template.suffix }}{% endif %}.css{% endcapture %}

	{% endif %}

	<link rel="stylesheet" href="{{ style_bundle | asset_url }}" type="text/css" as="style" />

{% endif %}

<noscript><link rel="stylesheet" href="{{ 'no-js.css' | asset_url }}" as="style" /></noscript>

<style>#admin-bar-iframe { display: none !important; }</style>