{% liquid
	if template contains 'list-collections'

		capture style_bundle
			echo 'bundle.list-collections.css'
		endcapture

	elsif template contains 'collection'

		capture style_bundle
			echo 'bundle.collection.css'
		endcapture

	elsif template contains 'product'

		capture style_bundle
			echo 'bundle.product.css'
		endcapture

	elsif template contains 'article'

		capture style_bundle
			echo 'bundle.article.css'
		endcapture

	elsif template contains 'page'

		capture style_bundle
			echo 'bundle.page.css'
		endcapture

	elsif request.path == '/challenge'

		capture style_bundle
			echo 'bundle.challenge.css'
		endcapture

	else

		capture style_bundle
			echo 'bundle.' | append: template.name
			if template.suffix
				echo '.' | append: template.suffix
			endif
			echo '.css'
		endcapture

	endif
%}

{{ style_bundle | asset_url | stylesheet_tag }}

<noscript>{{ 'no-js.css' | asset_url | stylesheet_tag }}</noscript>

