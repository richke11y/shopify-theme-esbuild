{% liquid
	if template 

		if template contains 'list-collections'

			capture script_bundle
				echo 'bundle.list-collections.js'
			endcapture

		elsif template contains 'collection'

			capture script_bundle
				echo 'bundle.collection.js'
			endcapture

		elsif template contains 'product'

			capture script_bundle
				echo 'bundle.product.js'
			endcapture

		elsif template contains 'article'

			capture script_bundle
				echo 'bundle.article.js'
			endcapture

		elsif template contains 'page'

			capture script_bundle
				echo 'bundle.page.js'
			endcapture

		elsif request.path == '/challenge'

			capture script_bundle
				echo 'bundle.challenge.js'
			endcapture

		else

			capture script_bundle
				echo 'bundle.' | append: template.name
				if template.suffix
					echo '.' | append: template.suffix
				endif
				echo '.js'
			endcapture

		endif

	endif
%}

<script type="text/javascript" src="{{ script_bundle | asset_url }}" defer></script>