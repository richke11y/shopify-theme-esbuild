{% unless template == 'password' %}
<script src="{{ 'bundle.theme.js' | asset_url }}" type="text/javascript" defer></script>
{% endunless %}

{% if template %}

{% capture script_bundle %}bundle.{{ template.name }}{% if template.suffix %}.{{ template.suffix }}{% endif %}.js{% endcapture %}
<script src="{{ script_bundle | asset_url }}" type="text/javascript" defer></script>

{% elsif request.path == '/challenge' %}

<script src="{{ 'bundle.challenge.js' | asset_url }}" type="text/javascript" defer></script>

{% else %}

{% unless checkout %}
<script src="{{ 'bundle.apps.js' | asset_url }}" type="text/javascript" defer></script>
{% endunless %}

{% endif %}