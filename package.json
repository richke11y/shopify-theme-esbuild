{
  "name": "shopify-theme-esbuild",
  "version": "0.0.1",
  "private": false,
  "description": "A bare-bones, Shopify Theme boilerplate that couples the Shopify CLI with esbuild. Bundles and compiles SCSS/CSS and JS files and fires up a local development environment.",
  "author": "Rich Kelly <rich@richkelly.uk>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/richke11y/shopify-theme-esbuild.git"
  },
  "scripts": {
    "start": "NODE_ENV=development run-p clean:assets esbuild shopify:serve copy:static watch:static",
    "build": "NODE_ENV=production run-s clean:assets esbuild copy:static shopify:check",
    "esbuild": "node esbuild.js",
    "clean:assets": "rm -rf ./assets/*",
    "copy:static": "run-s copy:css copy:fonts copy:img copy:svg",
    "copy:css": "recursive-copy './src/css/' './assets'",
    "copy:fonts": "recursive-copy './src/fonts/' './assets'",
    "copy:img": "recursive-copy './src/img/' './assets'",
    "copy:svg": "recursive-copy './src/svg/' './assets'",
    "shopify:check": "shopify theme check --exclude-category html --auto-correct",
    "shopify:serve": "shopify theme serve",
    "shopify:login": "shopify login --store https://MY-SHOPIFY-STORE-URL.myshopify.com/",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:static": "run-p watch:css watch:fonts watch:img watch:svg",
    "watch:css": "chokidar \"./src/css/**/*.css\" -c \"npm run copy:css\"",
    "watch:fonts": "chokidar \"./src/fonts/**/*.*\" -c \"npm run copy:fonts\"",
    "watch:img": "chokidar \"./src/img/**/*.*\" -c \"npm run copy:img\"",
    "watch:svg": "chokidar \"./src/svg/**/*.svg\" -c \"npm run copy:svg\""
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "esbuild": "^0.15.6",
    "esbuild-plugin-sass": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "recursive-fs": "^2.1.0"
  }
}
