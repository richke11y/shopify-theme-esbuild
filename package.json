  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eaglehodges/eaglehodges-shopify-theme.git"
  },
  "scripts": {
    "start": "NODE_ENV=development run-p esbuild shopify:serve",
    "build": "NODE_ENV=production run-s esbuild shopify:check",
    "esbuild": "node esbuild.js",
    "shopify:check": "shopify theme check --auto-correct",
    "shopify:serve": "shopify theme dev --store https://eagle-hodges-development.myshopify.com/ --ignore *.map"
  },
  "devDependencies": {
    "chokidar": "^3.5.3",
    "esbuild": "^0.15.6",
    "esbuild-plugin-sass": "^1.0.1",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "@shopify/theme-currency": "^4.1.1",
    "@shopify/theme-product": "^4.1.1",
    "@shopify/theme-product-form": "^4.1.1",
    "the-new-css-reset": "^1.11.3"
  }
}
